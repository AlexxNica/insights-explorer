{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "body-max-line-length": [
      0,
      "always",
      100
    ],
    "footer-max-line-length": [
      0,
      "always",
      100
    ],
    "subject-case": [
      2,
      "always",
      [
        "lower-case",
        "sentence-case",
        "start-case"
      ]
    ]
  }
}
